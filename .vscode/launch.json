{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "Debug C Program",
          "type": "cppdbg",
          "request": "launch",
          "program": "${fileDirname}/${fileBasenameNoExtension}.exe",
          "args": [],
          "stopAtEntry": false,
          "cwd": "C:\\MinGW\\bin",
          "environment": [],
